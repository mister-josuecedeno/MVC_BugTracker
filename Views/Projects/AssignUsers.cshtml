@model MVC_BugTracker.Models.ViewModels.ProjectMembersViewModel

@{
    ViewData["Title"] = "Assign Users";
}

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="container-fluid">
    <h2>Assign Team Members -  @Model.Project.Name</h2>
    <hr />
    <div class="row">
        <div class="col">
            @*<div class="panel panel-green margin-bottom-40">
                <div class="panel-heading">
                    <h3 class="panel-title"></h3>
                </div>
            </div>*@
            

            <form asp-action="AssignUsers" asp-controller="Projects" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Project.Id">
                <input type="hidden" asp-for="@Model.Project.Name">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="@Model.Users" class="control-label">Team members for Project: @Model.Project.Name</label>
                        <select asp-for="@Model.SelectedUsers" class="form-control" asp-items="@Model.Users" multiple="multiple"></select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <input type="submit" class="btn btn-success" value="Assign Users" />
                    </div>
                </div>
            </form>


        </div>
        <!--End Hover Rows-->
    </div>
    <div>
        @*@Html.ActionLink("Back to List", "Index")*@
        <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Project.Id">Back to List</a>
    </div>
</div>
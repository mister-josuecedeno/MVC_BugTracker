@model MVC_BugTracker.Models.ViewModels.PMViewModel

@{
    ViewData["Title"] = "Assign Project Manager";
}



<div class="container-fluid">
    <h2>Assign Project Manager -  @Model.Project.Name</h2>
    <hr />
    <div class="row">
        <div class="col">

            <form asp-action="AssignPM" asp-controller="Projects" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Project.Id">
                <input type="hidden" asp-for="@Model.Project.Name">
                <div class="col-6">
                    <div class="form-group">
                        <label class="control-label">Select a Project Manager</label>
                        <select asp-for="@Model.SelectedUser" class="form-control" asp-items="@Model.Users"></select>
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <input type="submit" class="btn btn-success" value="Assign PM" />
                    </div>
                </div>
            </form>


        </div>
        <!--End Hover Rows-->
    </div>
    <div>
        @*@Html.ActionLink("Back to List", "Index")*@
        <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Project.Id">Back to List</a>
    </div>
</div>
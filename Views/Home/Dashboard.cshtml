@model MVC_BugTracker.Models.ViewModels.DashboardViewModel

@using MVC_BugTracker.Services.Interfaces
@using Microsoft.AspNetCore.Identity
@using MVC_BugTracker.Extensions


<div class="container-fluid">

    <div><h1>Dashboard - @Model.Company.Name</h1></div>

    <!-- Top Row Small Cards-->
    <div class="row">
        <div class="col">
            <!-- small box - PROJECTS -->
            <div class="small-box bg-primary">
                <div class="inner">
                    @{
                        int projectCount = @Model.Projects.Count;
                    }

                    <h3>@projectCount</h3>

                    <p>Projects</p>
                </div>
                <div class="icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>

                <a class="small-box-footer" asp-area="" asp-controller="Projects" asp-action="AllProjects">
                    More info <i class="fas fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>

        <div class="col">
            <!-- small box - TICKETS -->
            <div class="small-box bg-success">
                <div class="inner">
                    @{
                        int ticketCount = @Model.Tickets.Count;
                    }

                    <h3>@ticketCount</h3>

                    <p>Tickets</p>
                </div>
                <div class="icon">
                    <i class="fas fa-tasks"></i>
                </div>
                <a class="small-box-footer" asp-controller="Tickets" asp-action="AllTickets">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>

        <div class="col">
            <!-- small box - MEMBERS -->
            <div class="small-box bg-warning">
                <div class="inner">

                    @{
                        int memberCount = @Model.Members.Count;
                    }

                    <h3>@memberCount</h3>

                    <p>Members</p>
                </div>
                <div class="icon">
                    <i class="fas fa-users"></i>
                </div>
                <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>


    </div>


    <!-- Second Row - GRAPHS for PROJECT -->
    <div class="row">

        <!-- Doughnut Chart -->

        <div class="col-12 col-md-6">
            <!-- DOOUGHNUT CHART -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Project Priority (% of Total)</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="donutChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>

        <!-- BAR Chart -->

        <div class="col">
            <!-- BAR CHART -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Project Priority (Count)</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="chart">
                        <canvas id="barChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </div>


    </div>



</div>

@section Scripts {
    <script>
        $.ajax({
            type: "POST",
            url: "/Home/PieChartMethod",
            data: '{}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {
                /* ChartJS
                * -------
                * Here we will create a few charts using ChartJS
                */

                //-------------
                //- DOOUGHNUT CHART -
                //-------------
                // Get context with jQuery - using jQuery's .get() method.
                console.log(result);

                var resultTotal = result.reduce((acc, cv) => acc + cv[1], 0);

                var donutChartCanvas = $('#donutChart').get(0).getContext('2d')
                var donutData = {
                    labels: [
                        result[0][0],
                        result[1][0],
                        result[2][0],
                        result[3][0],
                    ],
                    datasets: [
                        {
                            data: [
                                result[0][1] / resultTotal,
                                result[1][1] / resultTotal,
                                result[2][1] / resultTotal,
                                result[3][1] / resultTotal,
                                
                            ],
                            backgroundColor: ['#f56954', '#00a65a', '#f39c12', '#00c0ef'],
                        }
                    ]
                }

                var donutOptions = {
                    maintainAspectRatio: false,
                    responsive: true,
                }
                //Create pie or douhnut chart
                // You can switch between pie and douhnut using the method below.
                new Chart(donutChartCanvas, {
                    type: 'doughnut',
                    data: donutData,
                    options: donutOptions
                })

                // BAR CHART
                //-------------

                var areaChartData = {
                    labels: ['Urgent', 'High', 'Medium', 'Low'],
                    datasets: [
                        {
                            label: 'Project Priority',
                            backgroundColor: 'rgba(60,141,188,0.9)',
                            borderColor: 'rgba(60,141,188,0.8)',
                            pointRadius: false,
                            pointColor: '#3b8bba',
                            pointStrokeColor: 'rgba(60,141,188,1)',
                            pointHighlightFill: '#fff',
                            pointHighlightStroke: 'rgba(60,141,188,1)',
                            data: [
                                result[0][1],
                                result[1][1],
                                result[2][1],
                                result[3][1],
                            ]
                        }
                    ]
                }

                var barChartCanvas = $('#barChart').get(0).getContext('2d')
                var barChartData = $.extend(true, {}, areaChartData)

                var barChartOptions = {
                    responsive: true,
                    maintainAspectRatio: false,
                    datasetFill: false
                }

                new Chart(barChartCanvas, {
                    type: 'bar',
                    data: barChartData,
                    options: barChartOptions
                })


            },
            failure: function (result) {
                alert(result.d);
            },
            error: function (result) {
                alert(result.d);
            }
        })


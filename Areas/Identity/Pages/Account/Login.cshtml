@page
@model LoginModel

@{
    Layout = "/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Member Log in";
}

<h1 class="mb-0">@ViewData["Title"]</h1>
<div class="mb-2"><small>Note: Registration is By Invitation Only</small></div>

<div class="row">
    <div class="col">
        <section>


            <!-- NEW FORM -->
            <form id="account" method="post">
                <div class="input-group mb-3">
                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            @*<label asp-for="Input.RememberMe">
                                    <input type="checkbox" id="remember" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>*@


                            <input type="checkbox" id="remember" asp-for="Input.RememberMe">
                            <label for="remember">
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <!-- Placeholder for demo user section -->
            <div class="social-auth-links text-center mb-3">
                <p>- OR Use a Demo User to Login -</p>

                <!-- DEMO USERS -->
                <form method="post" id="account">
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <button class="btn btn-secondary btn-block mb-2" name="demoEmail" value="DemoAdminEmail">Demo Admin</button>
                                <button class="btn btn-secondary btn-block mb-2" name="demoEmail" value="DemoPMEmail">Demo Project Manager</button>
                                <button class="btn btn-secondary btn-block mb-2" name="demoEmail" value="DemoSubEmail">Demo Submitter</button>
                                <button class="btn btn-secondary btn-block mb-2" name="demoEmail" value="DemoDEvEmail">Demo Developer</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>

            <div class="form-group">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                @*<p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>*@
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </p>
            </div>

        </section>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


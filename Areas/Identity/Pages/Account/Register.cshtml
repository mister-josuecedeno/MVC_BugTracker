        <!-- NEW FORM -->
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- FIRST NAME -->
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="First Name" asp-for="Input.FirstName">
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>

            <!-- LAST NAME -->
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Last Name" asp-for="Input.LastName">
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>
            
            <!-- COMPANY NAME -->
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Company Name" asp-for="Input.CompanyName">
                <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-building"></span>
                    </div>
                </div>
            </div>
            
            <!-- COMPANY DESCRIPTION -->
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Company Description" asp-for="Input.CompanyDescription">
                <span asp-validation-for="Input.CompanyDescription" class="text-danger"></span>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-building"></span>
                    </div>
                </div>
            </div>

            <!-- EMAIL -->
            <div class="input-group mb-3">
                <input type="email" class="form-control" placeholder="Email" asp-for="Input.Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>

            <!-- PASSWORD -->
            <div class="input-group mb-3">
                <input type="password" class="form-control" placeholder="Password" asp-for="Input.Password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>

            <!-- CONFIRM PASSWORD -->
            <div class="input-group mb-3">
                <input type="password" class="form-control" placeholder="Retype password" asp-for="Input.ConfirmPassword">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Register</button>


        </form>

        <div class="form-group">
            
            <p class="mt-3">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already have an account?</a>
            </p>
            
        </div>

    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
